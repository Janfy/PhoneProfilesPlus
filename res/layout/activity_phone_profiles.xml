<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dslv="http://schemas.android.com/apk/res/sk.henrichg.phoneprofiles"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffdedede" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#fff5f5f5"
        android:orientation="vertical"
        android:padding="5dp" >
    
		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="55dp"
		    android:orientation="horizontal"
		    android:padding="1dp" >
		
		    <ImageView
		        android:id="@+id/activated_profile_icon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:adjustViewBounds="true"
		        android:contentDescription="@string/empty_string"
		        android:maxHeight="50dp"
		        android:maxWidth="50dp"
		        android:scaleType="centerCrop"
		        android:src="@drawable/ic_profile_default" />
		    
		    <TextView
		        android:id="@+id/activated_profile_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_marginLeft="3dp"
		        android:layout_toRightOf="@+id/activated_profile_icon"
		        android:paddingLeft="10dp"
		        android:text="@string/profile_name_default"
		        android:textSize="17sp" />
		
		    <ImageView
		        android:id="@+id/activated_profile_activated"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentBottom="true"
		        android:layout_alignParentRight="true"
		        android:adjustViewBounds="true"
		        android:contentDescription="@string/empty_string"
		        android:maxHeight="30dp"
		        android:maxWidth="30dp"
		        android:scaleType="centerCrop"
		        android:src="@drawable/ic_profile_activated" />
		    
		    <LinearLayout
		        android:id="@+id/activated_profile_pref_indicator"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/activated_profile_name"
		        android:layout_toRightOf="@+id/activated_profile_icon"
		        android:orientation="horizontal"
		        android:paddingLeft="10dp" >
		    		    
			</LinearLayout>		
		        		
		</RelativeLayout>
		
	</LinearLayout>		
    
    <com.mobeta.android.dslv.DragSortListView
        android:id="@+id/main_profiles_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent" 
        android:padding="10dip"
        android:dividerHeight="10.0sp"
        dslv:drag_enabled="true"
	    dslv:collapsed_height="2dp"
	    dslv:drag_scroll_start="0.33"
	    dslv:max_drag_scroll_speed="0.5"
	    dslv:float_background_color="#00000000"
	    dslv:float_alpha="0.6"
	    dslv:slide_shuffle_speed="0.3"
	    dslv:track_drag_sort="false"
	    dslv:use_default_controller="true"
	    dslv:drag_handle_id="@+id/main_list_drag_handle"
	    dslv:sort_enabled="true"
	    dslv:remove_enabled="false"
	    dslv:drag_start_mode="onDown"
	    dslv:remove_mode="flingRemove" />

</LinearLayout>