<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp" >

    <LinearLayout 
        android:id="@+id/calendars_multiselect_pref_dlg_item_color"
        android:orientation="vertical"
        android:layout_width="5dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="#FFFF0000"
        />
    
    <TextView
        android:id="@+id/calendars_multiselect_pref_dlg_item_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/calendars_multiselect_pref_dlg_item_color"
        android:text="@string/empty_string"
        android:textSize="16sp"
        android:singleLine="true" />

	<CheckBox
        android:id="@+id/calendars_multiselect_pref_dlg_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:checked="false"
        android:focusable="false"
        android:text="@string/empty_string" />
    
</RelativeLayout>
