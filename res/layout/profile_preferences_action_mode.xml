<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/profile_preferences_action_menu_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/phone_preferences_actionmode_cancel"
        android:background="@android:color/transparent"
        android:drawableLeft="?attr/actionProfilePrefCancel" />
    <Button
        android:id="@+id/profile_preferences_action_menu_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/phone_preferences_actionmode_save"
        android:background="@android:color/transparent"
        android:drawableLeft="?attr/actionProfilePrefSave" />
    
</LinearLayout>
