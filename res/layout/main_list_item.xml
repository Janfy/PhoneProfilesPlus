<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp"
    android:orientation="horizontal"
    android:background="@android:color/white" >

    <ImageView
        android:id="@+id/main_list_drag_handle"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/empty_string"
        android:paddingRight="5dp"
        android:scaleType="center"
        android:src="@drawable/ic_drag_handle" />
    
    <ImageView
        android:id="@+id/main_list_item_profile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/main_list_drag_handle"
        android:adjustViewBounds="true"
        android:contentDescription="@string/empty_string"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:scaleType="centerCrop"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_profile_default" />
    
    <TextView
        android:id="@+id/main_list_item_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/main_list_item_profile_icon"
        android:paddingLeft="10dp"
        android:text="@string/profile_name_default"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/main_list_item_longclick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:maxHeight="35dp"
        android:maxWidth="35dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/empty_string"
        android:src="@drawable/ic_action_edit_profile" />

    <LinearLayout
        android:id="@+id/main_list_profile_pref_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_list_item_profile_name"
        android:layout_toRightOf="@+id/main_list_item_profile_icon"
        android:orientation="horizontal"
        android:paddingLeft="10dp" >

    </LinearLayout>

</RelativeLayout>

