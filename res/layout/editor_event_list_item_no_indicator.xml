<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_list_item_root"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:padding="5dp"
    android:orientation="horizontal"
    android:background="?attr/cardShape" >

    <LinearLayout 
	        android:id="@+id/event_list_item_buttons_root"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
        	android:layout_alignParentRight="true"
        	android:orientation="horizontal" >

	    <ImageView
	        android:id="@+id/event_list_item_run_stop_event"
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:padding="10dp"
	        android:scaleType="center"
	        android:clickable="true"
	        android:background="?attr/actionProfileToolBackground"
	        android:contentDescription="@string/empty_string"
	        android:src="?attr/actionEventRunIcon" />
        
	    <ImageView
	        android:id="@+id/event_list_item_duplicate"
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:padding="10dp"
	        android:scaleType="center"
	        android:clickable="true"
	        android:background="?attr/actionProfileToolBackground"
	        android:contentDescription="@string/empty_string"
	        android:src="?attr/actionDuplicateIcon" />

	    <ImageView
	        android:id="@+id/event_list_item_delete"
	        android:layout_width="45dp"
	        android:layout_height="45dp"
	        android:padding="10dp"
	        android:scaleType="center"
	        android:clickable="true"
	        android:background="?attr/actionProfileToolBackground"
	        android:contentDescription="@string/empty_string"
	        android:src="?attr/actionDeleteIcon" />
	    	    	    	    
	</LinearLayout>
    
    <RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_toLeftOf="@+id/event_list_item_buttons_root"
        	android:layout_alignParentLeft="true"  
	        android:layout_centerVertical="true" >
    
	    <ImageView
	        android:id="@+id/event_list_item_event_icon"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:contentDescription="@string/empty_string"
	        android:scaleType="centerCrop"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:src="@drawable/ic_event_time" />
	    
	    <ImageView
	        android:id="@+id/event_list_item_status"
	        android:layout_width="27dp"
	        android:layout_height="27dp"
	        android:layout_alignTop="@+id/event_list_item_event_icon"
	        android:layout_toRightOf="@+id/event_list_item_event_icon"
	        android:adjustViewBounds="true"
	        android:contentDescription="@string/empty_string"
	        android:scaleType="fitStart"
	        android:src="@drawable/ic_event_status_stop"
	        android:paddingLeft="10dp"
	        android:paddingTop="2dp" />
	    
	    <TextView
	        android:id="@+id/event_list_item_event_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/event_list_item_status"
	        android:layout_toRightOf="@+id/event_list_item_status"
	        android:paddingLeft="3dp"
	        android:text="@string/event_name_default"
	        android:textSize="15sp"
	        android:singleLine="true" />
	    
	    <ImageView
	        android:id="@+id/event_list_item_profile_icon"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/event_list_item_event_icon"
	        android:contentDescription="@string/empty_string"
	        android:scaleType="centerCrop"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:src="@drawable/ic_profile_default" />
	    
	    <TextView
	        android:id="@+id/event_list_item_profile_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/event_list_item_profile_icon"
	        android:layout_toRightOf="@+id/event_list_item_profile_icon"
	        android:paddingLeft="10dp"
	        android:text="@string/event_preferences_profile_not_set"
	        android:textSize="15sp"
	        android:singleLine="true" />
	    
	</RelativeLayout>
	
</RelativeLayout>

