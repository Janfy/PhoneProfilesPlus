<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_prof_linlayout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?attr/activityPopupBackground"
    android:orientation="vertical"
    tools:context=".ShortcutCreatorActivity" >

    <LinearLayout
		android:id="@+id/act_prof_linlayout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="?attr/headerCardShape"
        android:orientation="vertical"
        android:padding="5dp" >
    
		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="55dp"
		    android:orientation="horizontal"
		    android:padding="1dp" >
		
		    <ImageView
		        android:id="@+id/act_prof_activated_profile_icon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:adjustViewBounds="true"
		        android:contentDescription="@string/empty_string"
		        android:maxHeight="50dp"
		        android:maxWidth="50dp"
		        android:scaleType="centerCrop"
		        android:src="@drawable/ic_profile_default" />
		    
		    <TextView
		        android:id="@+id/act_prof_activated_profile_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_marginLeft="3dp"
		        android:layout_toRightOf="@+id/act_prof_activated_profile_icon"
		        android:paddingLeft="10dp"
		        android:text="@string/profile_name_default"
		        android:textSize="19sp" />
		
		    <ImageView
		        android:id="@+id/act_prof_activated_profile_activated"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_alignParentRight="true"
		        android:adjustViewBounds="true"
		        android:contentDescription="@string/empty_string"
		        android:maxHeight="30dp"
		        android:maxWidth="30dp"
		        android:scaleType="centerCrop"
		        android:src="@drawable/ic_profile_activated" />
		    
		    <ImageView
		        android:id="@+id/act_prof_activated_profile_pref_indicator"
		        android:layout_width="200dp"
		        android:layout_height="20dp"
		        android:layout_below="@id/act_prof_activated_profile_name"
		        android:layout_toRightOf="@+id/act_prof_activated_profile_icon"
		        android:adjustViewBounds="true"
		        android:contentDescription="@string/empty_string"
		        android:scaleType="fitStart"
		        android:src="@drawable/ic_profile_pref_volume_on"
		        android:paddingLeft="10dp" />
		    		    
		</RelativeLayout>
		
	</LinearLayout>		
    
    <ListView
        android:id="@+id/act_prof_profiles_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent" 
        android:padding="10dip"
        android:dividerHeight="5dp"
        android:listSelector="?attr/cardSelector"
        android:drawSelectorOnTop="true" />

</LinearLayout>
