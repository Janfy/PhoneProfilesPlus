<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/applications_pref_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="@string/applications_preference_profile_icon_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/applications_pref_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/applications_pref_align"
        android:text="@string/empty_string"
		android:drawableTop="@drawable/ic_launcher"
        android:drawablePadding="2dp" />
    
    <TextView
        android:id="@+id/applications_pref_align"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="xxx"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#00000000" />
    

</RelativeLayout>
